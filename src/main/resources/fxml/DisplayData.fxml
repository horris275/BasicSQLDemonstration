<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<StackPane xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.github.horris275.basicsqldemonstration.ui.controllers.DisplayTabController">

    <stylesheets>
        <!-- Global CSS -->
        <URL value="@../css/global.css"/>
        <!-- DisplayTab CSS -->
        <URL value="@../css/display-tab.css"/>
    </stylesheets>

    <!-- Body -->
    <VBox styleClass="body-container">
        <!-- Header -->
        <VBox styleClass="header-container">
            <Text styleClass="header" text="Current data within the database:"/>
        </VBox>
        <!-- Table -->
        <VBox id="table-container">
            <TableView fx:id="table">
                <columns>
                    <TableColumn id="id-column" text="Identifier">
                        <cellValueFactory>
                            <PropertyValueFactory property="uniqueId"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn id="title-column" text="Title">
                        <cellValueFactory>
                            <PropertyValueFactory property="title"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn id="description-column" text="Description">
                        <cellValueFactory>
                            <PropertyValueFactory property="description"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn id="url-column" text="URL">
                        <cellValueFactory>
                            <PropertyValueFactory property="url"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </VBox>
</StackPane>