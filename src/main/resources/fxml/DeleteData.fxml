<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.github.horris275.basicsqldemonstration.ui.controllers.DeleteTabController">

    <stylesheets>
        <!-- Global CSS -->
        <URL value="@../css/global.css"/>
    </stylesheets>

    <!-- Body -->
    <VBox styleClass="body-container">
        <!-- Header -->
        <VBox styleClass="header-container">
            <Text styleClass="header" text="Delete a database row:"/>
        </VBox>
        <!-- Form -->
        <VBox styleClass="form-container">
            <Label styleClass="form-label" text="What database row would you like to delete (id)?"/>
            <TextField fx:id="idField"/>
            <Button text="Submit" onAction="#handleSubmit"/>
        </VBox>
    </VBox>
</StackPane>